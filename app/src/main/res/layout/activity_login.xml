<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="#57C5B6">

    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="371dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="80dp"
        android:background="#002B5B"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-thin"
                    android:text="Selamat Datang"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:id="@+id/tvselamat"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-thin"
                    android:text="Anda dapat mengakses materi Pemrograman Mobile di bawah"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-thin"
                    android:text="* https://www.dicoding.com/"

                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonback"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:backgroundTint="#1A5F7A"
                    android:text="Kembali"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="160dp"
                    tools:layout_editor_absoluteY="532dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>